<% include partials/header.ejs %>
<div class="container">
 <div class="row">
   <% if(flag == 'error'){ %>
     <div class="col-lg-12 alert alert-primary" role="alert" style="text-align:center">
         There is no such movies
     </div>
   <% } %>
 
       <% movies.forEach(function(movie){ %>
           <div class="col-md-3 col-sm-6 col-xs-12">
               <h4><%= movie.name.substring(0,15) %>
                  <% var extra="" %>
                  <% if(movie.name.length > 15){ %>
                      <% extra="..."; %>
                  <% } %>
                  <%= extra %>
                  </h4>
                  <a href="/index/<%= movie._id %>">
                       <img src="<%= movie.image %>" class="img-thumbnail images" alt="The Picture goes here">
                  </a>
                  <p><%= movie.year %></p>
            </div>
        <% }); %>
  
 </div>
</div>
